---
import "../styles/global.css";

interface Props {
    title: string;
    description: string;
    image?: string;
}

const {title, description, image = "/first/default.png"} = Astro.props;
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<link rel="icon" type="image/png" href="/first/favicon.png" />

<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
    href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@300..700&family=Funnel+Sans:ital,wght@0,300..800;1,300..800&family=Playpen+Sans:wght@100..800&family=Sue+Ellen+Francisco&display=swap"
    rel="stylesheet"
/>

<!-- Icons -->
<script src="https://kit.fontawesome.com/4ca6519832.js" crossorigin="anonymous"
></script>

<!-- Nutshell -->
<script is:inline src="https://cdn.jsdelivr.net/gh/ncase/nutshell/nutshell.js"
></script>

<script is:inline>
    Nutshell.setOptions({
        startOnLoad: true, // Start Nutshell on load? (default: true)
        lang: "en", // Language (default: 'en', which is English)
        dontEmbedHeadings: true, // If 'true', removes the "embed this as a nutshell" option on headings
    });
</script>

<!-- littlefoot.js -->
<link
    rel="stylesheet"
    href="https://unpkg.com/littlefoot/dist/littlefoot.css"
/>

<!-- Open Graph Data -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image, Astro.url)} />
